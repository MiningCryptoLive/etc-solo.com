
  <div class="row">
    <div class="col-xs-12 col-md-12">
	  <div class="note note-success">
		{{#if model.candidates}}
		<h4 style="color:white">Recently Found Blocks</h4>
		<div class="table-responsive">
		  <table class="table table-condensed table-striped">
			<thead>
			  <tr>
				<th style="color:white">Height</th>
				<th style="color:white">Login</th>
				<th style="color:white">Time Found</th>
				<th style="color:white">Variance</th>
			  </tr>
			</thead>
			<tbody>
			  {{#each model.candidates as |block|}}
			  <tr>
				<td><a href="https://blockscout.com/etc/mainnet/block/{{block.height}}" rel="nofollow" target="_blank">{{format-number block.height}}</a></td>
				<td>{{#link-to 'account' block.login class='hash'}}{{block.login}}{{/link-to}}</td>
				<td>{{format-date-locale block.timestamp}}</td>
				<td>
				  {{#if block.isLucky}}
				  <span class="label label-success">{{format-number block.variance style='percent'}}</span>
				  {{else}}
				  <span class="label label-info">{{format-number block.variance style='percent'}}</span>
				  {{/if}}
				</td>
			  </tr>
			  {{/each}}
			</tbody>
		  </table>
		</div>
		{{else}}
		<h3 style="color:white">No new blocks!</h3>
		{{/if}}
	  </div>
	</div>
  </div>

